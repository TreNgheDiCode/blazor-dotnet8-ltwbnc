@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject CartService CartService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Sport - Fashion Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: white;
            color: black;
            padding: 10px 20px;
        }

        .logo img {
            height: 64px;
            width: 128px;
        }

        .search-bar {
            display: flex;
            align-items: center;
            flex-grow: 1;
            justify-content: center;
        }

        .form-control {
            margin-right: 10px;
            width: 300px;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 5px;
        }

        .btn {
            padding: 5px 15px;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #218838;
            }

        .category {
            text-align: left;
            padding: 15px 0;
            background: linear-gradient(90deg, #32a852, #2a7d47);
            color: #fff;
            display: flex;
            justify-content: center;
            gap: 30px;
            border-radius: 10px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .list-group-horizontal {
            display: flex;
            gap: 30px;
        }

        .category-item {
            position: relative;
        }

            .category-item a,
            .category-item .dropdown-toggle {
                text-decoration: none;
                color: white;
                padding: 10px 20px;
                display: block;
                border-radius: 10px;
                transition: background-color 0.3s, color 0.3s;
            }

                .category-item a:hover,
                .category-item .dropdown-toggle:hover {
                    background-color: greenyellow;
                    color: black;
                }

        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: #2a7d47;
            border: none;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            padding: 0;
            margin: 0;
            border-radius: 10px;
            overflow: hidden;
            width: 200px; /* Adjust this as needed */
        }

        .dropdown-item {
            display: block; /* Make sure the entire item is block-level */
            padding: 0; /* Remove padding from the item itself */
        }

            .dropdown-item a {
                color: white;
                display: block;
                font-family: Arial, sans-serif;
                text-decoration: none;
                padding: 10px 20px; /* Add padding to the anchor */
                transition: background-color 0.3s, color 0.3s;
            }

                .dropdown-item a:hover {
                    background-color: yellow;
                    color: black;
                }

        .dropdown:hover .dropdown-menu {
            display: block;
        }

        .container {
            padding: 20px;
            margin-bottom: 100px; /* Ensure footer doesn't overlap */
        }

        .cart-login {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .cart-icon,
        .login-link {
            display: flex;
            align-items: center;
            gap: 5px;
            text-decoration: none;
            color: black;
        }

        .cart-icon {
            position: relative;
        }

            .cart-icon i,
            .login-link i {
                font-size: 1.5rem;
            }

        .cart-count {
            position: absolute;
            top: -5px;
            right: -10px;
            background-color: red;
            color: white;
            border-radius: 50%;
            padding: 2px 6px;
            font-size: 12px;
        }

        .product-card {
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            background-color: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

            .product-card img {
                max-height: 200px;
                object-fit: cover;
                border-radius: 10px;
            }

            .product-card .card-title {
                font-size: 1.2rem;
                font-weight: bold;
                margin-top: 10px;
                margin-bottom: 5px;
            }

            .product-card .card-text {
                font-size: 1rem;
                margin-bottom: 10px;
            }

            .product-card .price {
                font-size: 1.2rem;
                font-weight: bold;
                margin-bottom: 15px;
            }

            .product-card .btn {
                background-color: #dc3545;
                border-color: #dc3545;
                color: white;
            }

                .product-card .btn:hover {
                    background-color: #c82333;
                    border-color: #bd2130;
                }

        footer {
            text-align: center;
            background-color: #333;
            color: #fff;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="header-container">
        <div class="logo">
            <img src="logongang.png" alt="Logo">
        </div>
        <div class="search-bar">
            <input type="text" class="form-control" placeholder="Search products..." @bind="searchQuery">
            <button class="btn" @onclick="SearchProducts">Tìm kiếm</button>
        </div>
        <div class="cart-login">
            <a class="cart-icon" href="/cart/shoppingcart">
                <i class="bi bi-cart"><span class="cart-count">@cartItemCount</span></i>
                Giỏ hàng
            </a>
            <a class="login-link" href="/auth/login"><i class="bi bi-person-circle"></i> Đăng nhập</a>
        </div>
    </div>
    <div class="category">
        <NavCategory />
    </div>

    <div class="container">
        <div class="row">
            @Body
        </div>
    </div>

    <footer>
        <p>&copy; 2024 Super Sport. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@code {
    private string searchQuery = "";
    private int cartItemCount = 0;
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        cartItemCount = await CartService.GetCartItemCount();
        CartService.OnCartChanged += UpdateCartItemCount;
    }

    private async void UpdateCartItemCount()
    {
        cartItemCount = await CartService.GetCartItemCount();
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        CartService.OnCartChanged -= UpdateCartItemCount;
    }

    private void SearchProducts()
    {
        if (!string.IsNullOrEmpty(searchQuery))
        {
            NavigationManager.NavigateTo($"/search/{searchQuery}");
        }
        else
        {
            ShowErrorMessage("vui lòng nhập tên sản phẩm.");
        }
    }

    private void ShowErrorMessage(string message)
    {
        errorMessage = message;
    }
}
