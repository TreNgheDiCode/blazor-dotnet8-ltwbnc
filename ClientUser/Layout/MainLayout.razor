    <style>
        body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

.header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: white;
    color: black;
    padding: 10px 20px;
}

.logo img {
    height: 64px;
    width: 128px;
}

.icons a {
    margin-left: 10px;
    text-decoration: none;
    color: black;
}

.search-bar {
    display: flex;
    align-items: center;
}

.form-control {
    margin-right: 10px;
    width: 300px;
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 5px;
}

.btn {
    padding: 5px 15px;
    background-color: #28a745;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.btn:hover {
    background-color: #218838;
}

        .category {
            text-align: center;
            padding: 20px 0;
            background-color: forestgreen;
            color: #fff;
            display: flex;
            justify-content: center;
            gap: 20px;
        }

            .category a {
                text-decoration: none;
                padding: 10px 20px;
                background-color: white;
                color: forestgreen;
                border: 2px solid white;
                border-radius: 8px;
                transition: background-color 0.3s, color 0.3s, border 0.3s;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                font-weight: bold;
                font-size: 16px;
                margin-left:30px;
            }

                .category a:hover {
                    background-color: black;
                    color: white;
                    border: 2px solid black;
                    opacity: 1;
                }

        .product-card {
            background-color: #fff; /* White background for product cards */
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            padding: 15px;
            text-align: center;
            margin-bottom: 20px;
        }

            .product-card img {
                width: 100%;
                height: 150px;
                object-fit: cover;
                border-radius: 10px;
            }

            .product-card h5 {
                margin-top: 10px;
                color: #333; /* Dark text color for product titles */
            }

            .product-card p {
                margin-top: 5px;
                font-size: 14px;
                line-height: 1.5;
                color: #333; /* Dark text color for descriptions */
            }

            .product-card .price {
                font-weight: bold;
                font-size: 16px;
                margin-top: 10px;
                color: red; /* Green color for price */
            }

.container {
    padding: 20px;
}

footer {
    text-align: center;
    background-color: #333;
    color: #fff;
    padding: 10px 0;
    position: fixed;
    bottom: 0;
    width: 100%;
}

    </style>
</head>
<body>
    <div class="header-container">
        <div class="logo">
            <img src="logongang.png" alt="Logo">
        </div>
        <div class="search-bar">
            <input type="text" class="form-control" placeholder="Search products..." @bind="searchQuery">
            <button class="btn" @onclick="SearchProducts">Tìm kiếm</button>

        </div>
        <div class="icons">
            <a href="#"><i class="bi bi-cart"></i> Giỏ hàng </a>
            <a href="/auth/login"><i class="bi bi-person-circle"></i> Đăng nhập</a>
        </div>
    </div>

    <div class="category">
            <NavCategory/>
    </div>

    <div class="container">
        <div class="row">
            @Body
        </div>
    </div>

    <footer>
        <p>&copy; 2023 Tokyolife. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@code {
    private string searchQuery = "";

    private void SearchProducts()
    {
        if (!string.IsNullOrEmpty(searchQuery))
        {
            NavigationManager.NavigateTo($"/search/{searchQuery}");
        }
        else
        {
            ShowErrorMessage("vui lòng nhập tên sản phẩm.");
        }
    }
    private string errorMessage = "";

    // Hàm để hiển thị thông báo
    private void ShowErrorMessage(string message)
    {
        errorMessage = message;
    }
}