<AuthorizeView Roles="Admin">
    <Authorized>
        <div class="top-row ps-3 navbar navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="">
                    Chào mừng, @context.User.Identity!.Name
                </a>
                <button title="Chuyển hướng" class="navbar-toggler" @onclick="ToggleNavMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>

        <div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
            <nav class="flex-column">
                <div class="nav-item px-3">
                    <NavLink class="nav-link p-2" href="/" Match="NavLinkMatch.All">
                        <i class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></i> Trang chủ
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link p-2" @onclick="ShowUserContainer" style="cursor:pointer;" href="/user">
                        <div class="hstack gap-1">
                            <i class="bi bi-person-fill fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></i>
                            <span>Người dùng</span>
                        </div>
                    </NavLink>
                    <div class="nav-link p-2 text-white" style="visibility:@UserStyle">
                        <ul class="list-group">
                            <li style="list-style:none;" class="cursorStyle">
                                <NavLink class="nav-link p-2" href="/user" Match="NavLinkMatch.All">
                                    <div class="hstack text-wrap">
                                        <i class="bi bi-people-fill fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></i>
                                        <span>Quản lý người dùng</span>
                                    </div>
                                </NavLink>
                            </li>
                            <li style="list-style:none;" class="cursorStyle">
                                <NavLink class="nav-link p-2" href="/user/create" Match="NavLinkMatch.All">
                                    <div class="hstack">
                                        <i class="bi bi-person-add fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></i>
                                        <span>Thêm người dùng mới</span>
                                    </div>
                                </NavLink>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="nav-item px-3" style="margin-top:@MarginTop">
                    <NavLink class="nav-link p-2" @onclick="ShowCategoryContainer" style="cursor:pointer;" href="javascript:void()">
                        <div class="hstack gap-1">
                            <i class="bi bi-bookmark-fill fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></i>
                            <span>Danh mục</span>
                        </div>
                    </NavLink>
                    <div class="nav-link p-2 text-white" style="visibility:@CategoryStyle">
                        <ul class="list-group">
                            <li style="list-style:none;" class="cursorStyle">
                                <a class="nav-link p-2">
                                    <div class="hstack text-wrap">
                                        <i class="bi bi-bookmark-star fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></i>
                                        <span>Quản lý danh mục</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style:none;" class="cursorStyle">
                                <a class="nav-link p-2">
                                    <div class="hstack">
                                        <i class="bi bi-bookmark-plus fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></i>
                                        <span>Thêm danh mục mới</span>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </Authorized>
</AuthorizeView>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    public string MarginTop { get; set; } = "-7rem";
    public string UserStyle = "hidden";
    public bool ShowHideUser { get; set; } = false;

    private void ShowUserContainer()
    {
        ShowHideUser = !ShowHideUser;
        if (ShowHideUser)
        {
            MarginTop = "0";
            UserStyle = "visible";
        }
        else
        {
            MarginTop = "-7rem";
            UserStyle = "hidden";
        }
    }

    private string CategoryStyle = "hidden";
    public bool ShowHideCategory { get; set; } = false;
    private void ShowCategoryContainer()
    {
        ShowHideCategory = !ShowHideCategory;
        if (ShowHideCategory)
        {
            CategoryStyle = "visible";
        }
        else
        {
            CategoryStyle = "hidden";
        }
    }
}
